<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:c="http://www.springframework.org/schema/c"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
  
  <bean id="money" class="common.Money" scope="prototype"/>
  <bean id="coffee" class="common.Coffee" scope="prototype"/>
  
  <bean id="guest" class="customer.Guest">
  	<!-- <constructor-arg ref="money"></constructor-arg> -->
  	<property name="money">
  		<ref bean="money"/>
  	</property>
  </bean>
  
  <bean id="starbucks" class="shop.Starbucks">
  	<constructor-arg ref="coffee"></constructor-arg>
  </bean>
  
</beans>